{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://blackroad.os/schemas/agent-lanes.schema.json",
  "title": "BlackRoad OS Agent Lanes Configuration",
  "description": "Schema for agent lanes and guardrails configuration",
  "type": "object",
  "required": ["version", "lastUpdated", "description", "lanes", "guardrails"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this schema"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Schema version in semver format"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description"
    },
    "lanes": {
      "type": "object",
      "description": "Defined agent lanes",
      "additionalProperties": {
        "$ref": "#/definitions/lane"
      }
    },
    "guardrails": {
      "type": "object",
      "description": "Guardrail configurations",
      "additionalProperties": {
        "$ref": "#/definitions/guardrail"
      }
    },
    "notifications": {
      "type": "object",
      "description": "Notification channel configurations",
      "properties": {
        "channels": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/notificationChannel"
          }
        }
      }
    }
  },
  "definitions": {
    "lane": {
      "type": "object",
      "required": ["id", "name", "description", "emoji", "allowedActions", "allowedRepos", "restrictions"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$",
          "description": "Unique lane identifier"
        },
        "name": {
          "type": "string",
          "description": "Human-readable lane name"
        },
        "description": {
          "type": "string",
          "description": "Lane description"
        },
        "emoji": {
          "type": "string",
          "description": "Representative emoji"
        },
        "allowedActions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Actions allowed in this lane"
        },
        "allowedRepos": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Repository patterns (use * for wildcard)"
        },
        "excludedRepos": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Excluded repository patterns"
        },
        "restrictions": {
          "type": "object",
          "description": "Lane-specific restrictions",
          "properties": {
            "maxFilesPerPR": {
              "type": "integer",
              "minimum": 1,
              "description": "Maximum files per PR"
            },
            "requireTests": {
              "type": "boolean",
              "description": "Whether tests are required"
            },
            "requireApproval": {
              "type": "boolean",
              "description": "Whether human approval is required"
            },
            "blockedPaths": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Glob patterns for blocked paths"
            },
            "allowedPaths": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Glob patterns for allowed paths"
            },
            "allowedFileTypes": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Allowed file extensions"
            },
            "majorVersionsRequireHumanApproval": {
              "type": "boolean",
              "description": "Whether major version updates require human approval"
            },
            "majorReleasesRequireHumanApproval": {
              "type": "boolean",
              "description": "Whether major releases require human approval"
            },
            "notifySecurityTeam": {
              "type": "boolean",
              "description": "Whether to notify security team"
            }
          }
        }
      }
    },
    "guardrail": {
      "type": "object",
      "required": ["description", "rules"],
      "properties": {
        "description": {
          "type": "string",
          "description": "Guardrail category description"
        },
        "rules": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/rule"
          },
          "description": "Rules in this guardrail category"
        }
      }
    },
    "rule": {
      "type": "object",
      "required": ["id", "description", "enforcement", "emoji"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$",
          "description": "Unique rule identifier"
        },
        "description": {
          "type": "string",
          "description": "Rule description"
        },
        "enforcement": {
          "type": "string",
          "enum": ["block", "warn", "log"],
          "description": "How the rule is enforced"
        },
        "emoji": {
          "type": "string",
          "description": "Representative emoji"
        },
        "note": {
          "type": "string",
          "description": "Additional notes"
        },
        "affectedRepos": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Specific repos affected by this rule"
        }
      }
    },
    "notificationChannel": {
      "type": "object",
      "required": ["description", "emoji", "urgency"],
      "properties": {
        "description": {
          "type": "string",
          "description": "Channel description"
        },
        "emoji": {
          "type": "string",
          "description": "Representative emoji"
        },
        "urgency": {
          "type": "string",
          "enum": ["low", "medium", "high", "critical"],
          "description": "Urgency level"
        }
      }
    }
  }
}
