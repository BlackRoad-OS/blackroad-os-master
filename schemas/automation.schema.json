{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://blackroad.os/schemas/automation.schema.json",
  "title": "BlackRoad OS Automation Configuration",
  "description": "Schema for high-level automation configs that agents read",
  "type": "object",
  "required": ["version", "lastUpdated", "description", "coreRepos", "livePacks", "experimentalPacks", "allowedEnvironments", "labels", "projectFields"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this schema"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Schema version in semver format"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description"
    },
    "coreRepos": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^blackroad-os-[a-z0-9-]+$"
      },
      "description": "List of core repository IDs"
    },
    "livePacks": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^blackroad-os-pack-[a-z0-9-]+$"
      },
      "description": "List of live (production-ready) pack IDs"
    },
    "experimentalPacks": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^blackroad-os-pack-[a-z0-9-]+$"
      },
      "description": "List of experimental pack IDs"
    },
    "allowedEnvironments": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["dev", "staging", "prod"]
      },
      "description": "Allowed environment names"
    },
    "labels": {
      "type": "object",
      "description": "GitHub label definitions by category",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": {
          "$ref": "#/definitions/label"
        }
      }
    },
    "projectFields": {
      "type": "object",
      "description": "GitHub Project field definitions",
      "additionalProperties": {
        "$ref": "#/definitions/projectField"
      }
    }
  },
  "definitions": {
    "label": {
      "type": "object",
      "required": ["name", "color", "description", "emoji"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Label name as displayed in GitHub"
        },
        "color": {
          "type": "string",
          "pattern": "^[0-9a-fA-F]{6}$",
          "description": "Hex color code without #"
        },
        "description": {
          "type": "string",
          "description": "Label description"
        },
        "emoji": {
          "type": "string",
          "description": "Representative emoji"
        }
      }
    },
    "projectField": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["single-select", "multi-select", "text", "number", "date", "iteration"],
          "description": "Field type"
        },
        "options": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Options for select fields"
        },
        "duration": {
          "type": "string",
          "description": "Duration for iteration fields"
        },
        "unit": {
          "type": "string",
          "description": "Unit for number fields"
        }
      }
    }
  }
}
