{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://blackroad.os/schemas/repos.schema.json",
  "title": "BlackRoad OS Repository Registry",
  "description": "Schema for the master registry of repos → services → domains → envs",
  "type": "object",
  "required": ["version", "lastUpdated", "description", "repositories", "environments", "domains"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this schema"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Schema version in semver format"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of this registry"
    },
    "repositories": {
      "type": "object",
      "description": "Categories of repositories",
      "additionalProperties": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/repository"
        }
      }
    },
    "environments": {
      "type": "object",
      "description": "Available deployment environments",
      "additionalProperties": {
        "$ref": "#/definitions/environment"
      }
    },
    "domains": {
      "type": "object",
      "description": "Domain definitions",
      "additionalProperties": {
        "type": "string"
      }
    }
  },
  "definitions": {
    "repository": {
      "type": "object",
      "required": ["id", "name", "description", "domain", "type", "status", "environments", "url", "emoji"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^blackroad-os-[a-z0-9-]+$",
          "description": "Unique repository identifier"
        },
        "name": {
          "type": "string",
          "description": "Human-readable name"
        },
        "description": {
          "type": "string",
          "description": "Repository description"
        },
        "domain": {
          "type": "string",
          "description": "Domain category"
        },
        "type": {
          "type": "string",
          "enum": ["core", "infrastructure", "pack", "support", "meta"],
          "description": "Repository type"
        },
        "status": {
          "type": "string",
          "enum": ["ready", "in-progress", "experimental", "blocked", "deprecated"],
          "description": "Current status"
        },
        "environments": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["dev", "staging", "prod"]
          },
          "description": "Deployed environments"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "GitHub repository URL"
        },
        "emoji": {
          "type": "string",
          "description": "Representative emoji"
        },
        "complianceSensitive": {
          "type": "boolean",
          "description": "Whether this repo contains compliance-sensitive code"
        }
      }
    },
    "environment": {
      "type": "object",
      "required": ["name", "description", "emoji"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Environment name"
        },
        "description": {
          "type": "string",
          "description": "Environment description"
        },
        "emoji": {
          "type": "string",
          "description": "Status emoji"
        }
      }
    }
  }
}
