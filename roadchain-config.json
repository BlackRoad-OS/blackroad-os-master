{
  "roadchain": {
    "enabled": true,
    "version": "1.0.0",
    "network": "blackroad-mainnet",
    "chainId": "blackroad-os-master",
    "consensus": "proof-of-commit",
    "blockTime": "on-commit",
    "ledger": {
      "type": "distributed",
      "storage": ".roadchain/ledger",
      "backup": {
        "enabled": true,
        "locations": [
          "https://roadchain.blackroad.io/ledger",
          "https://backup.roadchain.blackroad.io/ledger"
        ]
      }
    },
    "tracking": {
      "commits": true,
      "pullRequests": true,
      "deployments": true,
      "builds": true
    },
    "hashing": {
      "algorithm": "sha256",
      "includeMetadata": true,
      "signCommits": true
    },
    "verification": {
      "enabled": true,
      "requireSignature": false,
      "trustModel": "web-of-trust"
    },
    "integration": {
      "github": {
        "enabled": true,
        "webhooks": true,
        "autoTrack": true
      },
      "crossRepo": {
        "enabled": true,
        "peers": [
          "BlackRoad-OS/blackroad-os-infra",
          "BlackRoad-OS/blackroad-os-api",
          "BlackRoad-OS/blackroad-os-web"
        ]
      }
    },
    "agents": {
      "enabled": true,
      "autoRegister": true,
      "communication": {
        "protocol": "roadchain-agent",
        "encryption": "tls",
        "discovery": "service-mesh"
      }
    },
    "api": {
      "endpoint": "https://roadchain-api.blackroad.io",
      "authentication": "bearer-token",
      "rateLimit": {
        "enabled": true,
        "requestsPerMinute": 1000
      }
    }
  }
}
