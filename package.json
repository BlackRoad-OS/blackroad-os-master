{
  "name": "blackroad-os-master",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && node -e \"require('fs').cpSync('src', 'dist', {recursive: true, filter: (src) => src.endsWith('.ts') ? false : true})\"",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "hono": "^4.6.12"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.16.2",
    "typescript": "^5.6.2"
  }
}
